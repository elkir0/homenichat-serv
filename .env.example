# Homenichat-Serv Environment Variables
# Copy this file to .env and configure your values

# Server
PORT=3001
NODE_ENV=production
DATA_DIR=/app/data

# JWT Secret (generate a strong random string!)
JWT_SECRET=change-this-to-a-secure-random-string

# Encryption (optional, for sensitive data at rest)
ENCRYPTION_KEY=

# WhatsApp - Meta Cloud API (optional)
META_APP_ID=
META_APP_SECRET=
META_PHONE_NUMBER_ID=
META_ACCESS_TOKEN=
META_WEBHOOK_SECRET=

# SMS - Twilio (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SMS - OVH (optional)
OVH_APP_KEY=
OVH_APP_SECRET=
OVH_CONSUMER_KEY=
OVH_SERVICE_NAME=

# VoIP - FreePBX AMI (optional)
AMI_HOST=192.168.1.160
AMI_PORT=5038
AMI_USER=admin
AMI_SECRET=

# GSM Modem (optional)
SIM_PIN=
